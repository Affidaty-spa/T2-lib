{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "@affidaty/t2-lib",
    "version": "3.0.0-beta1",
    "description": "Official Trinci 2 SDK JavaScript library",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "browser": "dist/browser/t2lib.min.js",
    "types": "dist/types/index.d.ts",
    "files": [
        "dist/",
        "schemas",
        "LICENSE",
        "CHANGELOG.md",
        "README.md"
    ],
    "directories": {
        "test": "tests",
        "doc": "docs",
        "lib": "dist"
    },
    "dependencies": {
        "@affidaty/t2-lib-core": "^2.0.0",
        "@types/node-fetch": "^2.0.0",
        "alea": "^1.0.0",
        "bigint-buffer": "^1.0.0",
        "bs58": "^5.0.0",
        "buffer": "^6.0.0",
        "fast-sha256": "^1.0.0",
        "int64-buffer": "^1.0.0",
        "js-crypto-key-utils": "^1.0.0",
        "merkletreejs": "^0.3.0",
        "node-abort-controller": "^3.0.0",
        "node-fetch": "^2.0.0"
    },
    "devDependencies": {
        "@types/jest": "^29.0.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "concurrently": "^8.0.0",
        "eslint": "^8.0.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-import-resolver-typescript": "^3.0.0",
        "eslint-plugin-import": "^2.0.0",
        "eslint-plugin-jest": "^27.0.0",
        "eslint-plugin-json": "^3.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "jest": "^29.0.0",
        "os-browserify": "^0.3.0",
        "prettier": "^3.0.0",
        "source-map-loader": "^5.0.0",
        "ts-jest": "^29.0.0",
        "ts-loader": "^9.0.0",
        "ts-node": "^10.0.0",
        "typedoc": "^0.25.7",
        "typedoc-plugin-missing-exports": "^2.0.0",
        "typescript": "^5.0.0",
        "webpack": "^5.0.0",
        "webpack-cli": "^5.0.0"
    },
    "scripts": {
        "test": "jest",
        "test-cov": "jest --coverage",
        "build-cjs": "tsc -p tsconfig.cjs.json",
        "build-esm": "tsc -p tsconfig.esm.json",
        "build-browser": "webpack --config webpack.config.js",
        "updt2tool": "cp -f dist/browser/* misc/t2_bc_tool/",
        "build": "concurrently \"npm:build-cjs\" \"npm:build-esm\" \"npm:build-browser\" && npm run updt2tool",
        "docs": "typedoc --options typedoc.json",
        "lint": "eslint . --ext .js,.ts",
        "lint:fix": "eslint --fix . --ext .js,.ts",
        "lint:report": "eslint . --ext .js,.ts -f json -o eslint_report.json"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/affidaty-blockchain/t2-lib.git"
    },
    "keywords": [
        "affidaty",
        "blockchain",
        "trinci",
        "ECDSA",
        "Sovereign Identity"
    ],
    "author": "Affidaty S.p.A",
    "license": "AGPL-3.0-only"
}
